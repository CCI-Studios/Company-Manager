<article>
	<p id="notice"><%= notice %></p>

	<p>
	  <b>Name:</b>
	  <%= @activity.name %>
	</p>

	<p>
	  <b>Description:</b>
	  <%= @activity.description %>
	</p>

	<p>
	  <b>Due date:</b>
	  <%= @activity.due_date %>
	</p>

	<p>
	  <b>Start date:</b>
	  <%= @activity.start_date %>
	</p>

	<p>
	  <b>Completion date:</b>
	  <%= @activity.completion_date %>
	</p>

