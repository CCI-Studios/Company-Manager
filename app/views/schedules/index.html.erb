<article>
	<h1>Listing schedules</h1>

	<table class="datalist">
		<thead>
			<tr>
				<th>Date</th>
				<th></th>
			</tr>
		</thead>

		<tbody>
		<% @schedules.each do |schedule| %>
			<tr>
				<td><%= schedule.date %></td>
				<td>
					<%= link_to 'S', schedule %>,
					<%= link_to 'E', edit_schedule_path(schedule) %>,
					<%= link_to 'D', schedule, :confirm => 'Are you sure?', :method => :delete %>
				</td>
			</tr>
		<% end %>
		</tbody>
	</table>

	<br />

	<%= link_to 'New Schedule', new_schedule_path %>
</article>