			<dt><%= f.label :password_hash %></dt>
			<dd><%= f.text_field :password_hash %></dd>
		</dl>
		<dl>
    	<dt><%= f.label :last_signin %></dt>
    	<dd><%= f.datetime_select :last_signin %></dd>
		</dl>
		<dl>
    	<dt><%= f.label :last_ip %></dt>
    	<dd><%= f.text_field :last_ip %></dd>
