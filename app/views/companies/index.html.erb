<article>
	<h1>Listing companies</h1>

	<table class="datalist">
		<thead>
	  	<tr>
	    	<th>Name</th>
	    	<th>Phone</th>
				<th>Manager</th>
	    	<th></th>
	  	</tr>
		</thead>

		<tbody>
		<% @companies.each do |company| %>
			<tr>
				<td><%= company.name %></td>
				<td><%= company.phone %></td>
				<td>&nbsp</td>
				<td>
					<%= link_to 'S', company %>,
					<%= link_to 'E', edit_company_path(company) %>,
					<%= link_to 'D', company, :confirm => 'Are you sure?', :method => :delete %>
				</td>
			</tr>
		<% end %>
		</tbody>
	</table>

	<%= link_to 'New Company', new_company_path %>
</article>